<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.geogram" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme customization -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/neon_green</item>

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/neon_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and text -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/neon_green</item>

        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/neon_green</item>

        <!-- Tabs and buttons -->
        <item name="colorAccent">@color/neon_blue</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Dialog theme -->
        <item name="alertDialogTheme">@style/DarkAlertDialog</item>
        <item name="materialAlertDialogTheme">@style/DarkAlertDialog</item>
    </style>


    <style name="Theme.geogram" parent="Base.Theme.geogram" />

    <style name="Theme.OffGridTelephone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/neon_green</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/neon_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and text -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/neon_green</item>

        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/neon_green</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Dialog theme -->
        <item name="alertDialogTheme">@style/DarkAlertDialog</item>
    </style>

    <!-- Dark AlertDialog Theme -->
    <style name="DarkAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">#2a2a2a</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="colorPrimary">@color/neon_green</item>
        <item name="colorAccent">@color/neon_blue</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/neon_green</item>
        <item name="buttonBarNegativeButtonStyle">@style/DarkDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/DarkDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/DarkDialogButton</item>
        <item name="editTextStyle">@style/DarkEditText</item>
        <item name="android:windowBackground">#2a2a2a</item>
        <item name="backgroundTint">#2a2a2a</item>
    </style>

    <!-- Dark Dialog Button Style -->
    <style name="DarkDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/neon_green</item>
        <item name="rippleColor">@color/neon_green</item>
    </style>

    <!-- Dark EditText Style for Dialogs -->
    <style name="DarkEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>
</resources>
