<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dark_gray_background"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:alpha="0.3"
        android:layout_marginBottom="12dp" />

    <!-- Battery Info Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Battery Icon -->
        <ImageView
            android:id="@+id/iv_battery_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_battery"
            app:tint="@color/white"
            android:contentDescription="Battery" />

        <!-- Estimated Time Remaining -->
        <TextView
            android:id="@+id/tv_battery_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Device can run for calculating..."
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
