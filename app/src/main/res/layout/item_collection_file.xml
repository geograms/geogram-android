<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#353535"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical">

    <!-- File/Folder Icon -->
    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_folder"
        app:tint="@color/white"
        android:layout_marginEnd="12dp" />

    <!-- File Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Name -->
        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="filename.txt"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Details (size, views, description) -->
        <TextView
            android:id="@+id/file_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.2 KB • 42 views"
            android:textColor="#888888"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

        <!-- Download Status -->
        <TextView
            android:id="@+id/download_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30% • downloading"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

        <!-- Description -->
        <TextView
            android:id="@+id/file_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File description"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Download Button / Progress -->
    <FrameLayout
        android:id="@+id/download_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/download_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_download"
            android:contentDescription="Download file"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/download_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Download Folder Button (for folders only) -->
    <ImageView
        android:id="@+id/download_folder_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_download"
        android:contentDescription="Download entire folder"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        app:tint="@color/white"
        android:visibility="gone" />

</LinearLayout>
