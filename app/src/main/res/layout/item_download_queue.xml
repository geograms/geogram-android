<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#353535"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- File info row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Download icon/status -->
        <ImageView
            android:id="@+id/download_status_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_download"
            android:tint="@color/white"
            android:layout_marginEnd="12dp" />

        <!-- File details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Filename -->
            <TextView
                android:id="@+id/download_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="filename.jpg"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Device/Collection -->
            <TextView
                android:id="@+id/download_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From: Device123 / Collection"
                android:textColor="#888888"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Cancel button (pause/play) -->
        <ImageView
            android:id="@+id/download_cancel_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_pause"
            android:tint="@color/white"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Pause/Resume download"
            android:layout_marginEnd="4dp" />

        <!-- Delete button -->
        <ImageView
            android:id="@+id/download_delete_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:tint="@color/white"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Delete download and files" />

    </LinearLayout>

    <!-- Progress bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/download_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:progressTint="@color/white"
            android:progressBackgroundTint="#555555" />

        <!-- Progress text -->
        <TextView
            android:id="@+id/download_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42%"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Status/speed text -->
    <TextView
        android:id="@+id/download_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Downloading... 1.2 MB / 3.5 MB"
        android:textColor="#888888"
        android:textSize="11sp"
        android:layout_marginTop="4dp" />

    <!-- Action buttons for completed downloads -->
    <LinearLayout
        android:id="@+id/download_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <!-- Play button -->
        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play"
            android:tint="@color/white"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Play file" />

        <!-- Open folder button -->
        <ImageView
            android:id="@+id/btn_folder"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_folder"
            android:tint="@color/white"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Open folder" />

        <!-- Clean/Remove button -->
        <ImageView
            android:id="@+id/btn_clean"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:tint="@color/white"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Remove from list" />

    </LinearLayout>

</LinearLayout>
