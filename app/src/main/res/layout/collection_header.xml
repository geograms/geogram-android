<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#353535"
    android:padding="16dp">

    <!-- Thumbnail on the left -->
    <ImageView
        android:id="@+id/collection_thumbnail_large"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_collections"
        android:contentDescription="Collection thumbnail"
        android:background="#2B2B2B"
        android:layout_marginEnd="12dp" />

    <!-- Text content on the right -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Collection Title -->
        <TextView
            android:id="@+id/collection_title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- Collection Description -->
        <TextView
            android:id="@+id/collection_description_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#B0B0B0"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="6dp" />

        <!-- Collection Metadata -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/collection_files_count_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#888888"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/collection_size_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Collection ID -->
        <TextView
            android:id="@+id/collection_id_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#666666"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:ellipsize="middle" />

        <!-- Updated text removed to save space -->
        <TextView
            android:id="@+id/collection_updated_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
