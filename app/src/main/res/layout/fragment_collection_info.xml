<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Collection Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collection Information"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- ID with Copy Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collection ID (npub)"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/collection_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textIsSelectable="true" />

            <Button
                android:id="@+id/btn_copy_npub"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Copy"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="#555555"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <!-- Storage Path -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Storage Path"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/storage_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textIsSelectable="true"
            android:layout_marginTop="4dp" />

        <!-- Actions Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actions"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Open in File Browser Button -->
        <Button
            android:id="@+id/btn_open_file_browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Collection Folder"
            android:textColor="@color/white"
            android:backgroundTint="#555555"
            android:layout_marginBottom="12dp" />

        <!-- Open Torrent File Button -->
        <Button
            android:id="@+id/btn_open_torrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Torrent File"
            android:textColor="@color/white"
            android:backgroundTint="#555555"
            android:layout_marginBottom="12dp" />

        <!-- Share Torrent File Button -->
        <Button
            android:id="@+id/btn_share_torrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Torrent File"
            android:textColor="@color/white"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="12dp" />

    </LinearLayout>

</ScrollView>
